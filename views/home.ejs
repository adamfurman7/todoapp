<%- include('partials/head')%>

    <body class="bg-primary p-2" style="--bs-bg-opacity: .15;">
        <%- include('partials/nav')%>
            <main class="container-sm">
                <div class="row justify-content-center">
                    <div class="col-sm-8">
                        <div class="card rounded-4 border-0 shadow">
                            <div class="card-body">
                                <h2 class="card-title text-center fs-4">My To Do's</h2>
                                <% if(todos.length> 0) {%>
                                    <div class="card-text">
                                        <ul class="list-group list-group-flush">
                                            <% for(t of todos){ %>
                                                <li
                                                    class="list-group-item d-flex justify-content-between align-items-center">
                                                    <%= t.todo %>
                                                        <span class="badge rounded-pill text-bg-secondary">
                                                            <a class="text-decoration-none text-black-50"
                                                                href="/edit/<%=t.id%>">Edit</a>
                                                        </span>
                                                </li>
                                                <%}%>
                                        </ul>
                                    </div>
                                    <%}%>
                                        <div class="col-auto mt-4">
                                            <form class="row justify-content-center" action="/" method="post"
                                                name="todoForm">
                                                <div class="input-group mn-3">
                                                    <input class="form-control" type="text" id="todo" name="todo"
                                                        placeholder="New to do">
                                                    <button class="btn btn-primary">Add</button>
                                            </form>
                                        </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
    </body>

    </html>